            @foreach (var performance in eventPerformances.Performances)
            {
                <tr>
                    <td class="text-center">@performance.Time</td>
                    <td class="text-center">@performance.Meet.Date.ToString("MM/dd/yyyy")</td>
                    <td class="text-center">
                        <a title="@performance.Meet.Name" asp-controller="Meets" asp-action="Details" asp-route-meetName="@performance.Meet.UrlName">
