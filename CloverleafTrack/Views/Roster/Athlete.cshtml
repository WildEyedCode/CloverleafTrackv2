    {
        <table class="table table-hover table-striped">
            <caption>@Model.Athlete.Name's Outdoor @eventPerformances.Event.Name Performances</caption>
            <thead>
            <tr>
                <th colspan="3" class="text-center">
                    @eventPerformances.Event.Name
                </th>
            </tr>
            <tr>
                <th scope="col" class="text-center">Performance</th>
                <th scope="col" class="text-center">Date</th>
                <th scope="col" class="text-center">Meet</th>
            </tr>
            </thead>
